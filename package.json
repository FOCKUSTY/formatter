		"@types/node": "^22.7.4",
		"mocha": "^10.7.3",
		"nodemon": "^3.1.7",
		"prettier": "^3.3.3",
		"ts-mocha": "^10.0.0",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.6.2"
