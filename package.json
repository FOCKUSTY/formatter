		"build:file": "tsc && tsc --declaration",
		"watch:build": "nodemon build.ts",
		"format": "prettier ./**.ts --write",
		"test": "ts-mocha --paths ./test/**/*.test.ts"
	},
	"files": [
		"colors.js",
		"colors.d.ts",
		"date/date.js",
		"date/date.d.ts",
		"date/month.js",
		"date/month.d.ts",
		"date/time.js",
		"date/time.d.ts",
		"types/date.types.d.ts",
		"types/date.types.d.ts",
		"formatter.js",
		"formatter.d.ts",
		"index.js",
		"index.d.ts"
	],
	"keywords": [
		"formatter",
		"simple",
		"simple formatter"
	],
	"author": "FOCKUSTY",
	"repository": {
		"type": "git",
		"url": "https://github.com/FOCKUSTY/formatter"
