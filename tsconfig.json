{
	"compilerOptions": {
		"target": "ES2022",
		"module": "es2022",
		"moduleResolution": "node",
		"rootDir": "./src/",
		"baseUrl": "./",
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["./**/*.ts"],
	"exclude": ["node_modules", "dist", "test"]
}
